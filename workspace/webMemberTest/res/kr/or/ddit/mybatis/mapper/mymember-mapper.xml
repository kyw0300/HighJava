<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0/EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="mymember">
	<select id="selectAllMember" resultType="mymemberVo">
		select * from mymember
	</select>
	
	<select id="idCheck" parameterType="String" resultType="String">
		select MEM_ID from mymember where MEM_ID = #{id}
	</select>
	
	<insert id="insertMember" parameterType="mymemberVo">
		insert into mymember values(#{mem_id}, #{mem_pass}, #{mem_name}, #{mem_tel}, #{mem_addr}, #{mem_photo})
	</insert>
	
	<select id="selectDetail" parameterType="String" resultType="mymemberVo">
		select * from mymember where mem_id = #{mem_id}
	</select>
	
	<update id="updateInfo" parameterType="mymemberVo">
		update mymember set mem_pass = #{mem_pass}, mem_name = #{mem_name}, mem_tel = #{mem_tel}, mem_addr = #{mem_addr}, mem_photo = #{mem_photo}
		 where mem_id = #{mem_id}
	</update>
	
	<delete id="deleteInfo" parameterType="String">
		delete from mymember where mem_id = #{mem_id}
	</delete>
	
	<select id="selectPhotoInfo" parameterType="String" resultType="String">
		select MEM_PHOTO from mymember where mem_id = #{mem_id}
	</select>
</mapper>